theme = "Catppuccin Mocha"
font-family = "Hack Nerd Font Mono"
font-size = 14
font-thicken = false
adjust-cell-width = 1%

# Performance
scrollback-limit = 10000

# Window settings
window-padding-x = 10
window-padding-y = 10
window-padding-balance = true
window-padding-color = extend
window-decoration = true
window-theme = auto
window-save-state = always

# Transparency and visual effects for macOS liquid visuals
background-opacity = 0.75
background-blur-radius = 20
macos-titlebar-style = tabs

# Cursor settings
cursor-style = block
cursor-style-blink = true

# Cursor shaders - fancy cursor effects
# cursor_slash: diagonal trail effect on cursor movement
# cursor_smear: smooth smearing trail effect on cursor movement
custom-shader-animation = true
custom-shader = shaders/cursor_slash.glsl
custom-shader = shaders/cursor_smear.glsl

# macOS: left Option key acts as Alt for terminal keybindings (Alt+B/F/D)
macos-option-as-alt = left

# Custom keybinds
keybind = shift+enter=text:\n
keybind = cmd+k=clear_screen
keybind = cmd+shift+d=new_split:right
keybind = cmd+d=new_split:down
keybind = cmd+shift+comma=reload_config
keybind = cmd+up=jump_to_prompt:-1
keybind = cmd+down=jump_to_prompt:1
keybind = cmd+shift+enter=toggle_split_zoom
keybind = cmd+alt+h=goto_split:left
keybind = cmd+alt+j=goto_split:bottom
keybind = cmd+alt+k=goto_split:top
keybind = cmd+alt+l=goto_split:right

# Shell Integration for Claude Code
shell-integration = detect
shell-integration-features = sudo,title,path

# Enhanced clipboard for better Claude Code integration
clipboard-read = allow
clipboard-write = allow
clipboard-trim-trailing-spaces = true
clipboard-paste-protection = true
clipboard-paste-bracketed-safe = true

# Mouse and selection improvements
mouse-hide-while-typing = true
focus-follows-mouse = true
copy-on-select = clipboard

# Link handling
link-url = true
link-previews = true

# Window resize feedback
resize-overlay = after-first
resize-overlay-duration = 750ms

# Auto-update notifications
auto-update = check

# Additional features
confirm-close-surface = false

# Bell: dock bounce (when unfocused) + bell emoji in title
# Note: system and audio are Linux/GTK-only, not functional on macOS
bell-features = attention,title

# Desktop notifications via OSC 9/777 (banner when unfocused)
desktop-notifications = true

# Quick Terminal (Quake-style dropdown from top of screen)
keybind = global:cmd+grave_accent=toggle_quick_terminal
quick-terminal-position = top
quick-terminal-size = 70%
quick-terminal-animation-duration = 0.15
quick-terminal-autohide = true

# Dim unfocused split panes for easier focus identification
unfocused-split-opacity = 0.85

# Show working directory in titlebar subtitle
window-subtitle = working-directory

# Faster mouse scroll (2x default speed)
mouse-scroll-multiplier = 2

# Option+Click to move cursor position in long commands
cursor-click-to-move = true

# Note: In tmux with `set -g mouse on`, use Cmd+Shift+Click to open URLs
# (plain Cmd+Click works outside tmux)
