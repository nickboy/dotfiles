theme = "Catppuccin Mocha"
font-family = "Hack Nerd Font Mono"
font-size = 14
font-thicken = false

# Performance
scrollback-limit = 10000

# Window settings
window-padding-x = 10
window-padding-y = 10
window-padding-balance = true
window-padding-color = extend
window-decoration = true
window-theme = auto
window-save-state = default

# Transparency and visual effects for macOS liquid visuals
background-opacity = 0.75
background-blur-radius = 20
macos-titlebar-style = transparent

# Cursor settings
cursor-style = block
cursor-style-blink = true

# Cursor shaders - fancy cursor effects
# cursor_slash: diagonal trail effect on cursor movement
# cursor_smear: smooth smearing trail effect on cursor movement
custom-shader-animation = true
custom-shader = shaders/cursor_slash.glsl
custom-shader = shaders/cursor_smear.glsl

# macOS: left Option key acts as Alt for terminal keybindings (Alt+B/F/D)
macos-option-as-alt = left

# Custom keybinds
keybind = shift+enter=text:\n
keybind = cmd+k=clear_screen
keybind = cmd+shift+d=new_split:right
keybind = cmd+d=new_split:down
keybind = cmd+shift+comma=reload_config
keybind = cmd+up=jump_to_prompt:-1
keybind = cmd+down=jump_to_prompt:1
keybind = cmd+shift+enter=toggle_split_zoom

# Shell Integration for Claude Code
shell-integration = detect
shell-integration-features = cursor,sudo,title,path

# Enhanced clipboard for better Claude Code integration
clipboard-read = allow
clipboard-write = allow
clipboard-trim-trailing-spaces = true
clipboard-paste-protection = true
clipboard-paste-bracketed-safe = true

# Mouse and selection improvements
mouse-hide-while-typing = true
focus-follows-mouse = true
copy-on-select = clipboard

# Link handling
link-url = true
link-previews = true

# Window resize feedback
resize-overlay = after-first
resize-overlay-duration = 750ms

# Auto-update notifications
auto-update = check

# Additional features
confirm-close-surface = false

# Bell notification for Claude Code permission requests
# Features: system (macOS notification), audio (sound), attention (dock bounce)
bell-features = system,audio,attention,title
