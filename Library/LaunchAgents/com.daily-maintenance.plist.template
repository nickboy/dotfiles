<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.daily-maintenance</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>{{HOME}}/daily-maintenance.sh</string>
        <string>--auto</string>
    </array>
    
    <!-- Run daily at 9:00 AM -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>9</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>
    
    <!-- Log output -->
    <key>StandardOutPath</key>
    <string>{{HOME}}/Library/Logs/daily-maintenance.log</string>
    <key>StandardErrorPath</key>
    <string>{{HOME}}/Library/Logs/daily-maintenance-error.log</string>
    
    <!-- Run at login to catch up missed maintenance -->
    <key>RunAtLoad</key>
    <true/>
    
    <!-- Set working directory -->
    <key>WorkingDirectory</key>
    <string>{{HOME}}</string>
    
    <!-- Environment variables -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/homebrew/bin</string>
    </dict>
</dict>
</plist>
